<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mou.prueba.AlarmaActivity"
    android:background="@drawable/bkgnd_alarma"
    android:orientation="vertical">

    <TextView
        android:text="ยก Alarma !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="29sp"
        android:textColor="@color/Gold"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/btnSilenciarAlarma"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/warning"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:text="Toque la imagen para silenciar la alarma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/Gold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvMensajeAlarma"
        android:text="Mensaje Alarma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/Gold"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnLlamarAproveedor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Llamar a Proveedor"/>

    </LinearLayout>



</LinearLayout>
