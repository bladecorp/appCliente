<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_900"
    tools:context="com.example.mou.prueba.Vehiculos"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca"
                android:id="@+id/tv_vehiculos_titMarca"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo"
                android:id="@+id/tv_vehiculos_titModelo"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placas"
                android:id="@+id/tv_vehiculos_placas"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llave"
                android:id="@+id/tv_vehiculos_codigo"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llave Inv"
                android:id="@+id/tv_vehiculos_codigoInv"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:id="@+id/tv_vehiculos_telefono"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinner_Marca"
                style="@style/spinner_style"
                android:popupBackground="@android:color/holo_green_light"
                android:layout_marginLeft="-10dp"
                android:gravity="center"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinner_Modelo"
                android:layout_below="@+id/spinner_Marca"
                android:layout_marginTop="5dp"
                style="@style/spinner_style"
                android:popupBackground="@android:color/holo_green_light"
                android:layout_marginLeft="-10dp"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/et_vehiculos_placas"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/holo_green_light"
                android:hint="536-YCV"
                android:textColorHint="@color/button_material_dark"
                android:inputType="textCapCharacters"
                android:capitalize="characters"
                android:background="@drawable/controrno_edittext"
                android:gravity="center"
                android:ellipsize="start"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/et_vehiculos_codigo"
                android:textColor="@android:color/holo_green_light"
                android:hint="Vehículo"
                android:textColorHint="@color/button_material_dark"
                android:background="@drawable/controrno_edittext"
                android:gravity="center"
                android:ellipsize="start"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/et_vehiculos_codigoInv"
                android:textColor="@android:color/holo_green_light"
                android:hint="Invitación"
                android:textColorHint="@color/button_material_dark"
                android:background="@drawable/controrno_edittext"
                android:gravity="center"
                android:ellipsize="start"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/et_vehiculos_telefono"
                android:textColor="@android:color/holo_green_light"
                android:hint="10 dígitos"
                android:textColorHint="@color/button_material_dark"
                android:background="@drawable/controrno_edittext"
                android:gravity="center"
                android:ellipsize="start"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lineal"
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <ToggleButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:id="@+id/tgl_vehiculos_auto"
            android:background="@drawable/btn_toggle_vehiculos"
            android:textOn=""
            android:textOff=""/>

        <ToggleButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Camioneta"
            android:id="@+id/tgl_vehiculos_camioneta"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:background="@drawable/btn_toggle_camioneta"
            android:textOn=""
            android:textOff=""/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lineal_toggle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_vehiculos_tit_auto"
            android:text="Auto"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_vehiculos_tit_camioneta"
            android:text="Camioneta"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginLeft="65dp"/>

    </LinearLayout>

</LinearLayout>
