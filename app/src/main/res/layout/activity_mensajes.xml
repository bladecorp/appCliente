<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mou.prueba.MensajesActivity"
    android:background="@color/material_blue_grey_900"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitulo_mensajes"
        android:text="SIN NOMBRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <Spinner
            android:id="@+id/spinner_mensajes_mes"
            android:layout_width="140dp"
            android:layout_height="40dp"
            style="@style/spinner_style"
            android:popupBackground="@android:color/holo_green_light"
            android:gravity="center">


        </Spinner>

        <Spinner
            android:id="@+id/spinner_mensajes_anio"
            android:layout_width="140dp"
            android:layout_height="40dp"
            style="@style/spinner_style"
            android:popupBackground="@android:color/holo_green_light"
            android:gravity="center">



        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_mensajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_mensajes"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@drawable/btn_texto_holo"
            android:background="@drawable/bkgnd_boton"
            android:text="Buscar"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvNohay_mensajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay mensajes registrados"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="22dp"
        android:layout_marginTop="-300dp"
        android:gravity="center"/>

</LinearLayout>
