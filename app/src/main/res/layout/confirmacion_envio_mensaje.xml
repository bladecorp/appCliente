<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="#004D40"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITULO"
            android:textColor="#ffffffff"
            android:textSize="22sp"
            android:id="@+id/tv_dialogo_enviarMensaje_titulo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENSAJE"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/tv_dialogo_envioMensaje" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:background="@drawable/boton_alter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:id="@+id/btn_dialogo_mensaje_SMS"
            android:textColor="#ffffffff"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:padding="5dp"/>
        <Button
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:background="@drawable/boton_alter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="WEB"
            android:id="@+id/btn_dialogo_mensaje_WEB"
            android:textColor="#ffffffff"
            android:drawableLeft="@android:drawable/ic_menu_compass"
            android:padding="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_dialogo_mensajeSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textColor="#ffffffff"
            android:background="@drawable/boton_alter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>


</LinearLayout>