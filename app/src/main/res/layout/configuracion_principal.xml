<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_grey_900"
    tools:context="com.example.mou.prueba.ConfiguracionPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Config_General"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark"
            android:text="Última Actualización: "
            android:gravity="center" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/layout_confPrincipal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >


            <Button
                android:textSize="22sp"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:text="Datos Personales"
                android:id="@+id/btn_Config_Personales"
                android:layout_gravity="center"
                android:background="@drawable/bkgnd_boton"
                android:textColor="@drawable/btn_texto_holo"
                android:drawableTop="@drawable/dp_android"
                android:contentDescription="Datos Personales"
                android:drawablePadding="-50dp" />

            <Button
                android:textSize="22sp"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:text="Vehículos"
                android:id="@+id/btn_Config_Vehiculos"
                android:layout_gravity="center"
                android:background="@drawable/bkgnd_boton"
                android:textColor="@drawable/btn_texto_holo"
                android:drawableTop="@drawable/ic_ferrari"
                android:drawablePadding="-50dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>