<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/material_blue_grey_900">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-30dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:background="@drawable/ferrari"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Escribe tu contraseÃ±a"
            android:textAlignment="center"
            android:textColor="@color/switch_thumb_normal_material_light"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/main_et_constrasena"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:maxLength="5"
            android:phoneNumber="true"
            android:textColor="@color/switch_thumb_normal_material_dark"
            android:textSize="25sp"
            android:textAlignment="center"
            android:password="true"
            android:background="@drawable/controrno_edittext"
            android:gravity="center"
            />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:rowCount="4"
        android:columnCount="3"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:id="@+id/login_grid" >

        <Button
            android:id="@+id/main_bt_uno"
            android:text="1"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_cuatro"
            android:text="4"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_siete"
            android:text="7"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_borrar"
            android:drawableTop="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:drawablePadding="0dp"
            android:text="Borrar"
            android:textAllCaps="false"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_dos"
            android:text="2"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_cinco"
            android:text="5"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_ocho"
            android:text="8"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_cero"
            android:text="0"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_tres"
            android:text="3"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_seis"
            android:text="6"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_nueve"
            android:text="9"
            android:background="@drawable/bkgnd_boton2"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/main_bt_ok"
            android:text="OK"
            android:background="@drawable/bkgnd_boton"
            android:textColor="@drawable/btn_texto_holo"
            android:textSize="25sp"
            android:layout_width="100dp"
            android:layout_height="70dp"/>

        </GridLayout>

</LinearLayout>
