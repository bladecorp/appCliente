<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mou.prueba.EnviarInvitacion"
    android:background="@color/material_blue_grey_900">

    <LinearLayout
        android:id="@+id/layout_invitacion_marcamodelo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_invitacion_marcaymodelo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Marca y Modelo"
            android:textSize="22sp"
            android:textColor="@android:color/holo_green_light"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_invitacion_placas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_invitacion_marcamodelo"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_invitacion_placas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Placas"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_light"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_invitacion_telsalida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_invitacion_placas"
        android:gravity="left"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_invitacion_tit_telsalida"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Teléfono de Salida: "
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_light"/>
        <TextView
            android:id="@+id/tv_invitacion_telsalida"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="(55)2309 6363"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_light"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_invitacion_dest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_invitacion_telsalida"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Destinatario: "
            android:textSize="18dp"
            android:textColor="@android:color/holo_green_light"/>
        <EditText
            android:id="@+id/et_invitacion_dest1"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/controrno_edittext"
            android:hint="10 dígitos"
            android:textColorHint="@color/button_material_dark"
            android:inputType="phone"
            android:textColor="@android:color/holo_green_light"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_invitacion_dest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_invitacion_dest1"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_invitacion_tit_dest2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Destinatario : "
            android:textSize="18dp"
            android:textColor="@android:color/holo_green_light"/>
        <EditText
            android:id="@+id/et_invitacion_dest2"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/controrno_edittext"
            android:hint="10 dígitos"
            android:textColorHint="@color/button_material_dark"
            android:inputType="phone"
            android:textColor="@android:color/holo_green_light"/>
        <ImageButton
            android:id="@+id/btn_invitacion_borrar2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_delete"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_invitacion_dest3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_invitacion_dest2"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_invitacion_tit_dest3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Destinatario : "
            android:textSize="18dp"
            android:textColor="@android:color/holo_green_light"/>
        <EditText
            android:id="@+id/et_invitacion_dest3"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/controrno_edittext"
            android:hint="10 dígitos"
            android:textColorHint="@color/button_material_dark"
            android:inputType="phone"
            android:textColor="@android:color/holo_green_light"/>
        <ImageButton
            android:id="@+id/btn_invitacion_borrar3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_delete"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_invitacion_dest4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_invitacion_dest3"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_invitacion_tit_dest4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Destinatario : "
            android:textSize="18dp"
            android:textColor="@android:color/holo_green_light"/>
        <EditText
            android:id="@+id/et_invitacion_dest4"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/controrno_edittext"
            android:hint="10 dígitos"
            android:textColorHint="@color/button_material_dark"
            android:inputType="phone"
            android:textColor="@android:color/holo_green_light"/>
        <ImageButton
            android:id="@+id/btn_invitacion_borrar4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_delete"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_invitacion_boton"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_invitacion_dest4"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_invitacion_enviar"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Enviar"
            android:textColor="@drawable/btn_texto_holo"
            android:background="@drawable/bkgnd_boton"/>

    </LinearLayout>

</RelativeLayout>
