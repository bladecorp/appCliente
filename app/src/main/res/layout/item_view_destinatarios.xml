<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bkgnd_listview"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="80dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOMBRE DE PERSONA"
        android:id="@+id/lv_dest_nombre"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@drawable/btn_texto_holo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="(55)2874-5566"
            android:id="@+id/lv_dest_telefono"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_orange_light"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/lv_dest_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/checkbox_on_background"/>

    </LinearLayout>


</LinearLayout>