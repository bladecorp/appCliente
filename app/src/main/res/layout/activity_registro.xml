<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mou.prueba.RegistroActivity"
    android:background="@color/material_blue_grey_900"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reg_tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUENTA DE USUARIO"
        android:textSize="24dp"
        android:textColor="@android:color/holo_green_light"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/reg_tvTitUsuarioOnombre"
            android:text="Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="22sp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_etUsuario"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_green_light"
            android:gravity="center"/>

        <TextView
            android:id="@+id/reg_tvUsuarioOnombre"
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/reg_tvTitPassword"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="22sp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_etPassword"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_green_light"
            android:gravity="center"
            android:password="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/reg_tvPassword"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:visibility="gone"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Login"
            android:id="@+id/reg_btnLogin"
            android:textColor="@drawable/btn_texto_holo"
            android:background="@drawable/bkgnd_boton" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Cuenta"
            android:id="@+id/reg_tvCuentaTitular"
            android:textColor="@android:color/holo_green_light" />

    </LinearLayout>



</LinearLayout>
