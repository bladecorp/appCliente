<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp" android:layout_height="wrap_content"
    android:background="@drawable/bkgnd_listview"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="80dp" >


    <LinearLayout
        android:id="@+id/layout_marcamodelo"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHEVROLET TOWN AND COUNTRY"
            android:id="@+id/lv_lista_marcamodelo"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@drawable/btn_texto_holo"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_marcamodelo"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/lv_lista_imagen"
                android:src="@drawable/auto_original"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="536-YCV"
                android:id="@+id/lv_lista_placas"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@drawable/btn_texto_holo"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desactivado"
                android:id="@+id/lv_lista_status"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titular"
                android:id="@+id/lv_lista_titular"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>