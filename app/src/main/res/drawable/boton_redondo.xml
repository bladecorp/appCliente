<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:right="5dp" android:top="5dp"
        android:drawable="@drawable/cambio_a_negro">
        <shape>
            <corners android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"
                android:topRightRadius="8dp"
                android:topLeftRadius="8dp"

                />
        </shape>
    </item>
    <item android:state_pressed="false" android:right="5dp" android:top="5dp"
        >
        <shape android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <gradient android:endColor="@android:color/holo_green_light"
                android:startColor="#ff0a460e"  />
        </shape>
    </item>


</selector>