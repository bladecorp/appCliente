<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:right="5dp" android:top="5dp"
        >
        <shape android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <gradient android:angle="90"
                android:endColor="#ffc63c44"
                android:startColor="#ff340909"  />
        </shape>
    </item>
    <item android:state_pressed="false" android:right="5dp" android:top="5dp"
        >
        <shape android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <gradient android:angle="90"
                android:endColor="#ffe0e42e"
                android:startColor="#ff626208"  />
        </shape>
    </item>
</selector>